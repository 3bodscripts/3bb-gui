-- Repeat Teleport Toggle
local teleportRepeater = false  -- state

window:AddToggle({
    text = "Auto farm wins",
    flag = "repeatTeleport",
    state = false,
    callback = function(state)
        teleportRepeater = state  -- update toggle state
        
        if state then
            -- Run in a separate task so it doesn't block the game
            spawn(function()
                local player = game.Players.LocalPlayer
                local char = player.Character or player.CharacterAdded:Wait()
                local hrp = char:WaitForChild("HumanoidRootPart")
                
                while teleportRepeater do
                    -- First teleport
                    hrp.CFrame = CFrame.new(5402, 1473, 191)
                    task.wait(0.8)
                    
                    -- Check if toggle is still ON
                    if not teleportRepeater then break end
                    
                    -- Second teleport
                    hrp.CFrame = CFrame.new(5383, 1480, 215)
                    task.wait(0.8)
                end
            end)
        end
    end
})

-- Anti-AFK Button
window:AddButton({
    text = "Anti AFK",
    flag = "antiAFK",
    callback = function()
        local player = game.Players.LocalPlayer
        local vu = game:GetService("VirtualUser")

        -- Disconnect old connections if any (optional safety)
        if _G.AFKConnection then
            _G.AFKConnection:Disconnect()
        end

        -- Connect anti-AFK
        _G.AFKConnection = player.Idled:Connect(function()
            vu:CaptureController()
            vu:ClickButton2(Vector2.new())
        end)

        -- Mobile-friendly notification
        game.StarterGui:SetCore("SendNotification", {
            Title = "3bb Hub",
            Text = "Anti AFK Enabled âœ…",
            Duration = 3
        })
    end
})

window:AddLabel({
    text = "Made by: 3bb",
    type = "label"
})

library:Init()
